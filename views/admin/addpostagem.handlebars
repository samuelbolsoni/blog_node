{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
        
            <label for="nome">Titulo</label>
            <input type="text" id="titulo" name="titulo" placeholder="Titulo da postagem" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control">
            <label for="slug">Descrição: </label>
            <input type="text" id="descricao" name="descricao" placeholder="Descricao do post" class="form-control">
            <label for="slug">Conteúdo: </label>
            <textarea name="conteudo" id="conteudo" cols="30" rows="10" class="form-control"></textarea>
            <label for="slug">Categoria: </label>
            <select name="categoria" id="categoria" class="form-select">
                <option value=""></option>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success  mt-4" type="submit">Criar postagem</button>
        </form>
    </div>
</div>
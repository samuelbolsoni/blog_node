<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mb-4">Nova postagem</button></a>

{{#each postagens}}
<div class="card">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>{{slug}}</small><br>
        <small>{{date}}</small><br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar postagem</button></a>
        <a href="/admin/postagens/deletar/{{id}}"><button class="btn btn-danger mt-2">Deletar postagem</button></a>
    </div>
</div>
{{else}}
    <h4 class="mt-4">Nenhuma postagem registrada</h4>
{{/each}}
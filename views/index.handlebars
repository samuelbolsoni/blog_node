<div class="jumbotron">
  <h1 class="display-4">Bem vindo ao Blog NodeJS</h1>
  <p class="lead">Blog desenvolvido em NodeJS | Bootstrap | MongoDB</p>
</div>
<hr>

<h2>Postagens</h2>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
      <small>{{categoria.nome}}</small>
        <h3>{{titulo}}</h3>
        
        <p>{{descricao}}</p>
        <a href="/postagens/{{slug}}"> <button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>{{data}}</small>
    </div>
</div>
{{else}}
    <h5>Nenhuma postagem cadastrada</h5>
{{/each}}